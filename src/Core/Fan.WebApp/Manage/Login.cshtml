@page
@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div id="app" v-cloak>
    <v-app id="inspire">
        <v-content>
            <v-container fluid fill-height>
                <v-layout align-center justify-center>
                    <v-flex xs12 sm8 md4>
                        <v-card class="elevation-12">
                            <v-toolbar dark color="primary">
                                <v-toolbar-title>Login</v-toolbar-title>
                            </v-toolbar>
                            <v-card-text>
                                <v-form v-model="valid">
                                    <v-alert :value="errMsg.length" type="error">{{ errMsg }}</v-alert>
                                    <v-text-field v-model="userName" required :rules="nameRules"
                                                  prepend-icon="person" name="userName" label="Email or username" type="text"></v-text-field>
                                    <v-text-field v-model="password" required :rules="passwordRules"
                                                  id="password" prepend-icon="lock" name="password" label="Password" type="password"></v-text-field>
                                    <v-checkbox v-model="rememberMe" label="Remember me?"></v-checkbox>
                                </v-form>
                            </v-card-text>
                            <v-card-actions>
                                <v-spacer></v-spacer>
                                <v-btn color="primary" @@click="login" :disabled="!valid">Login</v-btn>
                            </v-card-actions>
                        </v-card>
                    </v-flex>
                </v-layout>
            </v-container>
        </v-content>
    </v-app>
</div>

@section Scripts {
    <script src="~/admin/js/login.js" asp-append-version="true"></script>
}